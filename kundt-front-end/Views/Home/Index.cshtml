@{
    ViewBag.Title = "Home Page";
}
<style>
   
    .row{
        margin: 3em;
    } 
    #searchmask{
        background-color:lightgrey;
        padding: 1em;
    }
    #label{
        font-size: 20px;
        font-weight: 700;
        letter-spacing: .6px;
        text-align: center;
    }
    #date_von, #date_bis, .buttonOrange{
        font-size: 20px;
        height: 50px;
        width: 200px;
        font-weight: 700;
        letter-spacing: .6px;
        text-align: center;
    }
     .buttonOrange {
         font-size:15px;
        background-color: #f99b1c;
        border: none;
        color: #ffffff;
        text-transform: uppercase;
    }

        .buttonOrange:hover {
            background-color: #f99b1c;
            border: none;
            color: #ffffff;
            font-size: 15px;
            height: 50px;
            width: 200px;
            font-weight: 700;
            letter-spacing: .6px;
            text-align: center;
            text-transform: uppercase;
            opacity: 0.8;
        }
</style>
 <!-- Carousel-->
<div id="myCarousel" class="carousel" data-ride="carousel">

    <!-- Datepicker -->
    <div class="carousel-caption">
        <div id="searchmask">
            @*Standort:
            <input type="text" id="standort" />*@
            <label id="label">Von:</label>
            <input type="text" id="date_von" placeholder="dd.mm.yyyy" />        
            <label id="label">Bis:</label>
            <input type="text" id="date_bis" placeholder="dd.mm.yyyy"/>
            <button class="buttonOrange">Search</button>
        </div>
    </div>
    <!-- Punkte die anzeigen bei welchem bild ich bin-->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>

    </ol>
    <div class="carousel-inner">
        <!-- Jeweiliges bild (active sagt an bei welchem es startet)-->
        <div class="item active">
            <img src="~/Content/img/Bild1.jpg" alt="Bild1" style="width: 100%;" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/Content/img/Bild2.jpg" alt="Bild2" style="width: 100%;" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/Content/img/Bild3.jpg" alt="Bild3" style="width: 100%;" class="img-responsive" />
        </div>
    </div>
    <!-- Linke und rechte Pfeil (steuerung)-->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="row">
    <div id="angebot" class="col-lg-4">
        <h3>Angebot</h3>
        <div>
            <img src="~/Content/img/images.png" class="img-responsive" />
        </div>
    </div>
    <div id="werbeflaeche" class="col-lg-4">
        <h3>Werbefläche</h3>
        <div>
            <img src="~/Content/img/images.png" class="img-responsive" />
        </div>
    </div>
    <div id="googlemaps" class="col-lg-4">
        <h3>Hier findet ihr uns!</h3>
        <div>
            <img src="~/Content/img/images.png" class="img-responsive" />
        </div>
    </div>
</div>