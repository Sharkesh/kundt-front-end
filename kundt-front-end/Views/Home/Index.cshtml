@{
    ViewBag.Title = "Home Page";
}

 <!-- Carousel-->
<div id="myCarousel" class="carousel" data-ride="carousel">

    <div class="carousel-caption">
        <input type="text" id="date" />
        <button id="button">Button</button>

        <input type="text" id="date2" />
        <button id="button2">Button2</button>
    </div>
    <!-- Punkte die anzeigen bei welchem bild ich bin-->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>

    </ol>
    <div class="carousel-inner">
        <!-- Jeweiliges bild (active sagt an bei welchem es startet)-->
        <div class="item active">
            <img src="~/Content/img/Bild1.jpg" alt="Bild1" style="width: 100%;" class="img-responsive" />

        </div>
        <div class="item">
            <img src="~/Content/img/Bild2.jpg" alt="Bild2" style="width: 100%;" class="img-responsive" />

        </div>
        <div class="item">
            <img src="~/Content/img/Bild3.jpg" alt="Bild3" style="width: 100%;" class="img-responsive" />

        </div>
    </div>


    <!-- Linke und rechte Pfeil (steuerung)-->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>