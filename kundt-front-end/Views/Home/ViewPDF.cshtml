@model kundt_front_end.Models.ModelStepClass

@{
    ViewBag.Title = "ViewPDF";
}

<style>
    /* Progress-Bar */
    .miniButton {
        color: white;
        height: 35px;
        width: 35px;
        background-color: #f99b1c;
        border-radius: 35px;
        font-size: 18px;
        border-style: none;
        border-left: solid 1px;
        border-bottom: solid 1px;
        border-left-color: antiquewhite;
        border-bottom-color: antiquewhite;
        margin: auto 0% auto 1%;
    }

    .miniButtonOp {
        color: white;
        height: 35px;
        width: 35px;
        background-color: #f99b1c;
        border-radius: 35px;
        font-size: 18px;
        border-style: none;
        border-left: solid 1px;
        border-bottom: solid 1px;
        border-left-color: antiquewhite;
        border-bottom-color: antiquewhite;
        margin: auto 0% auto 1%;
        opacity: 0.3;
    }

    .myButton {
        color: white;
        height: 45px;
        width: 45px;
        background-color: #f99b1c;
        border-radius: 45px;
        font-size: 25px;
        border-style: none;
        border-left: solid 1px;
        border-bottom: solid 1px;
        border-left-color: antiquewhite;
        border-bottom-color: antiquewhite;
        margin: auto 0% auto 1%;
    }

    .myButtonOp {
        color: white;
        height: 45px;
        width: 45px;
        background-color: #f99b1c;
        border-radius: 45px;
        font-size: 25px;
        border-style: none;
        opacity: 0.3;
        border-bottom: solid 1px;
        border-left: solid 1px;
        border-left-color: antiquewhite;
        border-bottom-color: antiquewhite;
        margin: auto 0% auto 1%;
    }

    .myButton:active {
        height: 42px;
        width: 42px;
        border-radius: 42px;
        font-size: 22px;
        animation-name: anima01;
        animation-iteration-count: infinite;
        animation-duration: 2.5s;
        margin: 2% 0% auto 1%;
    }

    .myButtonOp:focus, .myButton:focus, .miniButton:focus, .miniButtonOp:focus {
        outline: none;
    }

    .noCurs {
        cursor: default;
    }

    .opacity {
        opacity: 1.0;
    }

    @@keyframes anima01 {
        0% {
            background-color: #f99b1c;
        }

        25% {
            background-color: orange;
        }

        50% {
            background-color: #f99b1c;
        }

        75% {
            background-color: orange;
        }

        100% {
            background-color: #f99b1c;
        }
    }

    @@keyframes anima02 {
        from {
            width: 75%;
        }

        to {
            width: 100%;
        }
    }

    .myBorder {
        /*border-color: #f99b1c;*/
        padding: 15px 10px 5px 10px;
    }

    .myBar01 {
        height: 6px;
        margin-top: 18px;
        background-color: #f99b1c;
        animation-name: anima02;
        animation-duration: 3s;
        border-top-right-radius: 2px;
        border-bottom-right-radius: 2px;
    }

    .containerBar {
        width: 65%;
        margin-left: 0px;
        border-left: solid 3px;
        border-left-color: #f99b1c;
        padding-left: 0px;
        height: 43px;
        border-radius: 1px;
        margin-left: 10px;
    }
    /* Progress-Bar Ende */
    /*#region Buttons*/
    .buttonOrangeForwardStep3 {
        background-color: #f99b1c;
        border: none;
        color: #ffffff;
        font-size: 15px;
        height: 50px;
        width: 200px;
        font-weight: 700;
        letter-spacing: .5px;
        text-align: center;
        display: inline-block;
        border-radius: 4px;
    }

        .buttonOrangeForwardStep3 span {
            cursor: pointer;
            display: inline-block;
            position: relative;
            transition: 0.5s;
        }

            .buttonOrangeForwardStep3 span:after {
                content: '\00bb';
                position: absolute;
                opacity: 0;
                top: 0;
                right: -30px;
                transition: 0.5s;
                font-size: 15px;
            }

        .buttonOrangeForwardStep3:hover span {
            padding-right: 15px;
        }

            .buttonOrangeForwardStep3:hover span:after {
                opacity: 1;
                right: 0;
            }

        .buttonOrangeForwardStep3:hover {
            background-color: #f99b1c;
            border: none;
            color: #ffffff;
            font-size: 15px;
            height: 50px;
            width: 200px;
            font-weight: 700;
            letter-spacing: .5px;
            text-align: center;
        }

    .buttonOrangeReturnStep3 {
        background-color: #f99b1c;
        border: none;
        color: #ffffff;
        font-size: 15px;
        height: 50px;
        width: 200px;
        font-weight: 700;
        letter-spacing: .5px;
        text-align: center;
        display: inline-block;
        border-radius: 4px;
    }

        .buttonOrangeReturnStep3 span {
            cursor: pointer;
            display: inline-block;
            position: relative;
            transition: 0.5s;
        }

            .buttonOrangeReturnStep3 span:after {
                content: '\00ab';
                position: absolute;
                opacity: 0;
                top: 0;
                left: -30px;
                transition: 0.5s;
                font-size: 15px;
            }

        .buttonOrangeReturnStep3:hover span {
            padding-left: 15px;
        }

            .buttonOrangeReturnStep3:hover span:after {
                opacity: 1;
                left: 0;
            }

        .buttonOrangeReturnStep3:hover {
            background-color: #f99b1c;
            border: none;
            color: #ffffff;
            font-size: 15px;
            height: 50px;
            width: 200px;
            font-weight: 700;
            letter-spacing: .5px;
            text-align: center;
        }

    .col-lg-6 > p > span {
        float: right;
    }
    /*#endregion*/
</style>



<div class="container" style="margin-top:20px;">
    <div class="row">
        <div class="col-xs-12">
            <div class="col-xs-12" style="margin-left:10px; height:100%;">
                <div class="col-xs-12">
                    <center>
                        <h1 class="h3Step3" style="margin-bottom:0px">Buchungsnummer @Html.DisplayFor(m => m.IDBuchung)</h1>
                        <h3 class="h3Step3" style="margin-bottom:0px">@Html.DisplayFor(m => m.gebuchtesAuto.tblTyp.tblMarke.Marke) @Html.DisplayFor(m => m.gebuchtesAuto.tblTyp.Typ)</h3>
                    </center>
                </div>
                <div class="col-xs-12">
                    <center><img src="~/Content/img/mb-c-klasse-kombi-5d-schwarz-2014.png" class="img-responsive" /></center>
                </div>

                <div class="TextAufzählungStep3 ">
                    <center>
                        <div class="col-xs-6">
                            <h4 class="h4Step3">Abholung</h4>
                            <p>Wien am @Model.date_von_string</p>
                            <h4 class="h4Step3">Rückgabe</h4>
                            <p>Wien am @Model.date_bis_string</p>
                        </div>
                        <div class="col-xs-6">
                            <h4 class="h4Step3">Mietdauer</h4>
                            <p>@Html.DisplayFor(d => d.Mietdauer) Tage</p>
                            <h4 class="h4Step3">Preis</h4>
                            <p>@Html.DisplayFor(d => d.Gesamtpreis) Euro</p>
                        </div>
                    </center>
                </div>
            </div>

            <div class="col-xs-12">
                <div class="row">
                    <div class="col-xs-12" style="margin-bottom:20px;margin-top:20px;">
                        <center><h2>Ihre Daten</h2></center>
                    </div>
                    <center>
                        <div class="col-xs-6">
                            <p><b>Anrede: </b><span>@Html.DisplayFor(model => model.kunde.Anrede)</span></p>
                            <p><b>Vorname: </b><span>@Html.DisplayFor(model => model.kunde.Vorname)</span></p>
                            <p><b>Nachname: </b><span>@Html.DisplayFor(model => model.kunde.Nachname)</span></p>
                            <p><b>Geburtsdatum: </b><span>@Html.DisplayFor(model => model.kunde.GebDatum)</span></p>
                        </div>

                        <div class="col-xs-6">
                            <p><b>Straße: </b><span>@Html.DisplayFor(model => model.kunde.Strasse)</span></p>
                            <p><b>PLZ: </b><span>@Html.DisplayFor(model => model.kunde.tblPLZOrt.PLZ) @Html.DisplayFor(model => model.kunde.tblPLZOrt.Ort)</span></p>
                            <p><b>Telefon: </b><span>@Html.DisplayFor(model => model.kunde.Telefon)</span></p>
                            <p><b>Reisepassnr.: </b><span>@Html.DisplayFor(model => model.kunde.ReisepassNr)</span></p>
                        </div>
                    </center>
                </div>
            </div>
        </div>
    </div>
</div>

