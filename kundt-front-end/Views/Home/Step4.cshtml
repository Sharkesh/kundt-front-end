
@{
    ViewBag.Title = "Step4";
}
<style>
    .collapseForm{
        margin-bottom: 15px;
    }
</style>

<div class="container" style="margin-top: 20px;">
    
    <div class="row">
        @*Erste Box für Login Anfang*@
        <div class="col-xs-12 col-md-8 formFeldLinks" style="border: 1px solid black"> 
            <form class="form-horizontal" style="padding: 20px;">
                <div class="form-group">
                    @*E-Mail1*@
                    <label for="inputMail" class="col-md-2 control-label">Email</label>
                    <div class="col-md-10">
                        <input type="email" class="form-control" id="mailLogin" placeholder="Email">
                    </div>
                </div>
                <div class="form-group">
                    @*Passwort1*@
                    <label for="inputPasswort" class="col-md-2 control-label">Passwort</label>
                    <div class="col-md-10">
                        <input type="password" class="form-control" id="inputPasswort" placeholder="Passwort">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-md-10">
                        <div class="checkbox" style="margin-top: -10px;">
                            <label>
                                <input type="checkbox"> Angemeldet bleiben
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @*Buttons Zurück, Registieren, Login*@
                    <button type="submit" class="btn btn-default">Zurück</button>
                    <button type="button" class="btn btn-default" data-toggle="collapse" data-target="#registrieren" style="position: relative; right: -20px;">Registrieren</button>
                    <button type="submit" class="btn btn-default" style="position: relative; right: -40px;">Login</button>
                </div>
            </div>
            @*Erste Box für Login Ende*@
        </form>
            
            @*Zweite Box für Regestrieren Anfang*@
            <form class="form-horizontal" style="margin-left: 15px;">
                <div id="registrieren" class="collapse" style="border-top: 1px solid black;">


                    <div class="form-group" style="margin-top: 35px;">
                        <label for="prename" class="col-md-2 control-label collapseForm">Vorname</label>
                        <div class="col-md-10"> @*Box Vorname*@
                            <input type="text" class="form-control collapseForm" id="prename" placeholder="Vorname">
                        </div>
                        <label for="sirname" class="col-md-2 control-label collapseForm">Nachname</label>
                        <div class="col-md-10"> @*Box Nachname*@
                            <input type="text" class="form-control collapseForm" id="sirname" placeholder="Nachname">
                        </div>
                        <label for="mailRegister" class="col-md-2 control-label collapseForm">Email</label>
                        <div class="col-md-10"> @*Box Email2*@
                            <input type="email" class="form-control collapseForm" id="mailRegister" placeholder="Email">
                        </div>
                        <label for="adress" class="col-md-2 control-label collapseForm">Adresse</label>
                        <div class="col-md-10"> @*Box Adresse*@
                            <input type="text" class="form-control collapseForm" id="adress" placeholder="Adresse">
                        </div>
                        <label for="city" class="col-md-2 control-label collapseForm">Ort</label>
                        <div class="col-md-10"> @*Box Ort*@
                            <input type="text" class="form-control collapseForm" id="city" placeholder="Ort">
                        </div>
                        <label for="postcode" class="col-md-2 control-label collapseForm">PLZ</label>
                        <div class="col-md-10"> @*Box PLZ*@
                            <input type="text" class="form-control collapseForm" id="postcode" placeholder="PLZ">
                        </div>
                        @*Button Regestieren2*@
                        <div class="col-md-offset-2" style="position: relative; left: 194px;">
                            <button type="submit" class="btn btn-default">Registrieren</button>

                        </div>


                    </div>


                </div>
            </form> 
    @*Zweite Box für Regestrieren Ende*@
        </div>
       
        
        <div class="col-xs-12 col-md-4 autoAnsichtRechts" style="border: 1px solid black">
            <div>
                <img src="\Content\img\Bild2.jpg" alt="Auto" width="200"/>
            </div>




        </div>


    </div>
</div>





