    /*ProgressBar als Zähler*/
    .myButton {
        color:white; 
        height: 45px;
        width: 45px;
        background-color: #f99b1c;
        border-radius: 45px;
        font-size: 25px;
        border-style: none;
        border-left: solid 1px;
        border-bottom: solid 1px;
        border-left-color: antiquewhite;
        border-bottom-color: antiquewhite;
        margin: auto 0% auto 1%;
    }

    .myButtonOp {
        color:white; 
        height: 45px;
        width: 45px;
        background-color: #f99b1c;
        border-radius: 45px;
        font-size: 25px;
        border-style: none;
        opacity: 0.3;
        border-bottom: solid 1px;
        border-bottom-color: antiquewhite;
        margin: auto 0% auto 1%;
    }

    .myButton:active {
        height: 40px;
        width: 40px;
        border-radius: 40px;
        font-size: 22px;
        animation-name: anima01;
        animation-iteration-count: infinite;
        animation-duration: 2.5s;
    }

    .myButton:focus {
        outline: none;
    }

    .myButtonOp:focus {
        outline: none;
    }

    @@keyframes anima01 {
            0% {
                background-color: darkorange;
            }

            25% {
                background-color: orange;
            }

            50% {
                background-color: darkorange;
            }

            75% {
                background-color: orange;
            }

            100% {
                background-color: darkorange;
            }
        }

    .myBorder {
        
        border-bottom: solid 1px;
        border-color: darkorange;
        padding: 15px 10px 5px 10px;
    }
</style>
