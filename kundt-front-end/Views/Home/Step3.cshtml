    }

    .miniButtonOp {
        color: white;
        height: 35px;
        width: 35px;
        background-color: #f99b1c;
        border-radius: 35px;
        font-size: 18px;
        border-style: none;
        border-left: solid 1px;
        border-bottom: solid 1px;
        border-left-color: antiquewhite;
        border-bottom-color: antiquewhite;
        margin: auto 0% auto 1%;
        opacity: 0.3;
    }

    .myButton {
        color: white;
        height: 45px;
        width: 45px;
        background-color: #f99b1c;
        border-radius: 45px;
        font-size: 25px;
        border-style: none;
        border-left: solid 1px;
        border-bottom: solid 1px;
        border-left-color: antiquewhite;
        border-bottom-color: antiquewhite;
        margin: auto 0% auto 1%;
    }

    .myButtonOp {
        color: white;
        height: 45px;
        width: 45px;
        background-color: #f99b1c;
        border-radius: 45px;
        font-size: 25px;
        border-style: none;
        opacity: 0.3;
        border-left: solid 1px;
        border-bottom: solid 1px;
        border-left-color: antiquewhite;
        border-bottom-color: antiquewhite;
        margin: auto 0% auto 1%;
    }

    .myButton:active {
        height: 42px;
        width: 42px;
        border-radius: 42px;
        font-size: 22px;
        animation-name: anima01;
        animation-iteration-count: infinite;
        animation-duration: 2.5s;
        margin: 2% 0% auto 1%;
    }

    .myButtonOp:focus, .myButton:focus, .miniButton:focus, .miniButtonOp:focus {
        outline: none;
    }

    .noCurs {
        cursor: default;
    }
     .opacity{
        opacity:1.0;
    }
    @@keyframes anima01 {
        0% {
                    background-color: #f99b1c;
        }

        25% {
                    background-color: orange;
                }

        50% {
                    background-color: #f99b1c;
        }

        75% {
                    background-color: orange;
                }

        100% {
                    background-color: #f99b1c;
        }
            }

    @@keyframes anima02 {
                from {
                width: 50%;
                }

                to {
                width: 100%;
                }
            }

    .myBorder {
        /*border-color: #f99b1c;*/
        padding: 15px 10px 5px 10px;
    }

    .myBar01 {
        height: 6px;
        margin-top: 18px;
        background-color: #f99b1c;
        animation-name: anima02;
        animation-duration: 3s;
        border-top-right-radius: 2px;
        border-bottom-right-radius: 2px;
    }

    .containerBar {
        width: 35%;
        margin-left: 0px;
        border-left: solid 3px;
        border-left-color: #f99b1c;
        padding-left: 0px;
        height: 43px;
        border-radius: 1px;
        margin-left: 10px;
    }


    /* .Checkbox */
    .squaredTwo {
        padding: 0px;
        margin-top: 6px;
        width: 28px;
        height: 28px;
        position: relative;
        background: #f99b1c;
        border-radius: 2px;
    }

        .squaredTwo label {
                width: 20px;
                height: 20px;
                cursor: pointer;
                position: absolute;
                left: 4px;
                top: 4px;
                background: #FFFFFF;
            border-radius: 2px;
            }

            .squaredTwo label:after {
                content: '';
                width: 14px;
                height: 8px;
                position: absolute;
                top: 5px;
                left: 3px;
                border: 3px solid #f99b1c;
                border-top: none;
                border-right: none;
                background: transparent;
                opacity: 0;
                -webkit-transform: rotate(-45deg);
            transform: rotate(-45deg);
            }

            .squaredTwo label:hover::after {
                opacity: 0.3;
            }

        .squaredTwo input[type=checkbox] {
            visibility: hidden;
        }

            .squaredTwo input[type=checkbox]:checked + label:after {
                opacity: 1;
            }
    /* end .Checkbox */
</style>


